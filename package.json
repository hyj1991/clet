{
  "name": "clet",
  "version": "0.5.0",
  "description": "Command Line E2E Testing",
  "type": "module",
  "exports": {
    "import": "./dist/esm/runner.js",
    "require": "./dist/esm/runner.cjs"
  },
  "typings": "./dist/esm/runner.d.ts",
  "author": "TZ <atian25@qq.com> (https://github.com/atian25)",
  "homepage": "https://github.com/node-modules/clet",
  "repository": "git@github.com:node-modules/clet.git",
  "dependencies": {
    "dirname-filename-esm": "^1.1.1",
    "dot-prop": "^6.0.1",
    "execa": "^5.1.1",
    "lodash.ismatch": "^4.4.0",
    "p-event": "^4.2.0",
    "strip-ansi": "^7.0.0",
    "strip-final-newline": "^3.0.0",
    "throwback": "^4.1.0",
    "trash": "^7.2.0"
  },
  "devDependencies": {
    "@eggjs/tsconfig": "^1.0.0",
    "common-jest-preset": "^1.0.0",
    "cross-env": "^7.0.3",
    "egg-ci": "^1",
    "enquirer": "^2.3.6",
    "eslint": "^7",
    "eslint-config-egg": "^9",
    "jest": "^27.0.4",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "files": [
    "bin",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "cov": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "ci": "npm run lint && npm run cov",
    "tsc": "tsc -p ./tsconfig.json",
    "tsc:clean": "tsc -b --clean",
    "tsc:esm": "tsc -p ./tsconfig.esm.json",
    "tsc:cjs": "tsc -p ./tsconfig.cjs.json && npm run cjs",
    "cjs": "for f in dist/cjs/*.js; do mv -- \"$f\" \"${f%.txt}.cjs\"; done",
    "prepublishOnly": "npm run tsc:clean && npm run tsc:esm && npm run tsc:cjs"
  },
  "ci": {
    "version": "14, 16",
    "type": "github"
  },
  "eslintIgnore": [
    "coverage",
    "dist"
  ],
  "license": "MIT"
}
